{
  "name": "DAT Price Per Mile",
  "description": "DAT plugin to sort freight by price per mile",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "header.html"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {  
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "css": ["contentScript.css"],
        "run_at": "document_end"
    }
  ]
}